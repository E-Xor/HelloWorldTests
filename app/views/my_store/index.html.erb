<% if notice %><!--What the notice?-->
  <p id="notice"><%= notice %></p>
<% end  %>

<h1>Book catalog</h1>

<% @my_test_scaffolds.each do |mts| %>

  <div class="entry">
    <%= image_tag(mts.image_url) %>
    <h3><%= mts.title %></h3>
    <%= sanitize mts.description %><!--Sanitize allows to use any html tags inside-->
    <div class="price_line">
      <span class="price"><%= currency(mts.price) %></span><!--See helper for currency()-->
      <%= button_to 'Add to cart', shop_items_path(:my_test_scaffold_id => mts)%>
    </div>
  </div>

<% end %>
