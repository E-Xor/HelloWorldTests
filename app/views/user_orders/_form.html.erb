    <%= f.label :user_email, "E-Mail: " %>
    <%= f.email_field :user_email, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :user_pay_type, "Pay with: " %>
    <%= f.select :user_pay_type, UserOrder::PAYMENT_TYPES, :prompt => "Please select payment method" %>
