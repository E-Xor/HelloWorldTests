<h1>Listing user_orders</h1>

<table>
  <tr>
    <th>User name</th>
    <th>User address</th>
    <th>User email</th>
    <th>User pay type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_orders.each do |user_order| %>
  <tr>
    <td><%= user_order.user_name %></td>
    <td><%= user_order.user_address %></td>
    <td><%= user_order.user_email %></td>
    <td><%= user_order.user_pay_type %></td>
    <td><%= link_to 'Show', user_order %></td>
    <td><%= link_to 'Edit', edit_user_order_path(user_order) %></td>
